<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">


	<modelVersion>4.0.0</modelVersion>

	<groupId>de.uniluebeck.itm.spyglass</groupId>
	<artifactId>spyglass-parent</artifactId>
	<packaging>pom</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>SpyGlass</name>

	<properties>
		<project.build.classifier>${finalName.os}-${finalName.arch}</project.build.classifier>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.source.version>1.6</java.source.version>
		<java.target.version>1.6</java.target.version>
	</properties>

	<modules>
		<module>core</module>
		<!-- <module>ishell</module> -->
	</modules>

	<dependencyManagement>
		<dependencies>

			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.8.1</version>
				<scope>test</scope>
			</dependency>

			<dependency>
				<groupId>de.uniluebeck.itm.spyglass</groupId>
				<artifactId>spyglass-parent</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>de.uniluebeck.itm.spyglass</groupId>
				<artifactId>spyglass-core</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>de.uniluebeck.itm.spyglass</groupId>
				<artifactId>spyglass-standalone</artifactId>
				<version>${project.version}</version>
			</dependency>
			<!--
			<dependency>
				<groupId>de.uniluebeck.itm.spyglass</groupId>
				<artifactId>spyglass-ishell</artifactId>
				<version>${project.version}</version>
			</dependency>
			-->
			<dependency>
				<groupId>log4j</groupId>
				<artifactId>log4j</artifactId>
				<version>1.2.15</version>
			</dependency>
			<dependency>
				<groupId>org.simpleframework</groupId>
				<artifactId>simple-xml</artifactId>
				<version>1.7.3</version>
			</dependency>
			<dependency>
				<groupId>de.danbim.swtquadtree</groupId>
				<artifactId>swtquadtree</artifactId>
				<version>1.1</version>
			</dependency>
			<dependency>
				<groupId>org.eclipse</groupId>
				<artifactId>org.eclipse.ui.workbench</artifactId>
				<version>3.4.0</version>
			</dependency>
			<dependency>
				<groupId>org.eclipse</groupId>
				<artifactId>org.eclipse.ui.forms</artifactId>
				<version>3.3.100</version>
			</dependency>
			<dependency>
				<groupId>org.eclipse</groupId>
				<artifactId>org.eclipse.osgi</artifactId>
				<version>3.4.0</version>
			</dependency>
			<dependency>
				<groupId>org.eclipse</groupId>
				<artifactId>org.eclipse.jface</artifactId>
				<version>3.4.0</version>
			</dependency>
			<dependency>
				<groupId>org.eclipse</groupId>
				<artifactId>org.eclipse.jface.databinding</artifactId>
				<version>1.2.0</version>
			</dependency>
			<dependency>
				<groupId>org.eclipse</groupId>
				<artifactId>org.eclipse.equinox.common</artifactId>
				<version>3.3.0</version>
			</dependency>
			<dependency>
				<groupId>org.eclipse</groupId>
				<artifactId>org.eclipse.core.runtime</artifactId>
				<version>3.4.0</version>
			</dependency>
			<dependency>
				<groupId>org.eclipse</groupId>
				<artifactId>org.eclipse.core.databinding</artifactId>
				<version>1.1.0</version>
			</dependency>
			<dependency>
				<groupId>org.eclipse</groupId>
				<artifactId>org.eclipse.core.databinding.beans</artifactId>
				<version>1.1.0</version>
			</dependency>
			<dependency>
				<groupId>org.eclipse</groupId>
				<artifactId>org.eclipse.core.commands</artifactId>
				<version>3.4.0</version>
			</dependency>
			<dependency>
				<groupId>com.coalesenses.ishell</groupId>
				<artifactId>ishell-linux</artifactId>
				<version>1.0</version>
			</dependency>
			<dependency>
				<groupId>com.ibm.icu</groupId>
				<artifactId>icu4j</artifactId>
				<version>4.0.1</version>
			</dependency>
			<dependency>
				<groupId>joda-time</groupId>
				<artifactId>joda-time</artifactId>
				<version>1.6</version>
			</dependency>
			<dependency>
				<groupId>com.google.guava</groupId>
				<artifactId>guava</artifactId>
				<version>r05</version>
			</dependency>
			<dependency>
				<groupId>org.eclipse.swt</groupId>
				<artifactId>${swt.artifactId}</artifactId>
				<version>${swt.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<profiles>
		<profile>
			<id>cocoa-macosx-x86_64</id>
			<activation>
				<os>
					<family>mac</family>
					<name>Mac OS X</name>
				</os>
			</activation>
			<properties>
				<finalName.os>cocoa-macosx</finalName.os>
				<finalName.arch>x86_64</finalName.arch>
				<swt.artifactId>swt-cocoa-macosx-x86_64</swt.artifactId>
				<swt.version>3.6.1</swt.version>
			</properties>
		</profile>
		<profile>
			<id>cocoa-macosx-x86</id>
			<activation>
				<os>
					<family>mac</family>
					<name>Mac OS X</name>
					<arch>x86</arch>
				</os>
			</activation>
			<properties>
				<finalName.os>cocoa-macosx</finalName.os>
				<finalName.arch>x86</finalName.arch>
				<swt.artifactId>swt-cocoa-macosx-x86</swt.artifactId>
				<swt.version>3.6.1</swt.version>
			</properties>
		</profile>
		<profile>
			<id>gtk-linux-x86_64</id>
			<activation>
				<os>
					<name>linux</name>
				</os>
			</activation>
			<properties>
				<finalName.os>gtk-linux</finalName.os>
				<finalName.arch>x86_64</finalName.arch>
				<swt.artifactId>swt-gtk-linux-x86_64</swt.artifactId>
				<swt.version>3.6.1</swt.version>
			</properties>
		</profile>
		<profile>
			<id>gtk-linux-x86</id>
			<activation>
				<os>
					<name>linux</name>
					<arch>x86</arch>
				</os>
			</activation>
			<properties>
				<finalName.os>gtk-linux</finalName.os>
				<finalName.arch>x86</finalName.arch>
				<swt.artifactId>swt-gtk-linux-x86</swt.artifactId>
				<swt.version>3.6.1</swt.version>
			</properties>
		</profile>
		<profile>
			<id>windows-x86_64</id>
			<activation>
				<os>
					<family>windows</family>
				</os>
			</activation>
			<properties>
				<finalName.os>windows</finalName.os>
				<finalName.arch>x86_64</finalName.arch>
				<swt.artifactId>swt-windows-x86_64</swt.artifactId>
				<swt.version>3.6.1</swt.version>
			</properties>
		</profile>
		<profile>
			<id>windows-x86</id>
			<activation>
				<os>
					<family>windows</family>
					<arch>x86</arch>
				</os>
			</activation>
			<properties>
				<finalName.os>windows</finalName.os>
				<finalName.arch>x86</finalName.arch>
				<swt.artifactId>swt-windows-x86</swt.artifactId>
				<swt.version>3.6.1</swt.version>
			</properties>
		</profile>
	</profiles>

	<pluginRepositories>
		<pluginRepository>
			<id>itm-maven-repository-releases</id>
			<url>http://www.itm.uni-luebeck.de/projects/maven/releases/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</pluginRepository>
		<pluginRepository>
			<id>itm-maven-repository-snapshots</id>
			<url>http://www.itm.uni-luebeck.de/projects/maven/snapshots/</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>

	<repositories>
		<repository>
			<id>google-maven-repository</id>
			<name>Google Maven Repository</name>
			<url>http://google-maven-repository.googlecode.com/svn/repository/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>itm-maven-repository-releases</id>
			<url>http://www.itm.uni-luebeck.de/projects/maven/releases/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>itm-maven-repository-snapshots</id>
			<url>http://www.itm.uni-luebeck.de/projects/maven/snapshots/</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>repository.tu-bs.de</id>
			<url>http://www.ibr.cs.tu-bs.de/maven/</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<layout>default</layout>
		</repository>
		<repository>
			<id>repository.jboss.org</id>
			<url>http://repository.jboss.org/nexus/content/groups/public-jboss/</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>itm-nexus-repository-releases</id>
			<url>http://dev.itm.uni-luebeck.de:8882/content/repositories/releases/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>itm-nexus-repository-snapshots</id>
			<url>http://dev.itm.uni-luebeck.de:8882/content/repositories/snapshots/</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

	<distributionManagement>
		<repository>
			<id>itm-nexus-repository-releases</id>
			<name>ITM UzL Nexus releases repository</name>
			<url>scp://dev.itm.uni-luebeck.de/opt/sonatype-work/nexus/storage/releases/</url>
		</repository>
		<snapshotRepository>
			<id>itm-nexus-repository-snapshots</id>
			<name>ITM UzL Nexus snapshots repository</name>
			<url>scp://dev.itm.uni-luebeck.de/opt/sonatype-work/nexus/storage/snapshot/</url>
		</snapshotRepository>
	</distributionManagement>

	<scm>
		<connection>scm:git:https://itm@github.com/itm/spyglass.git</connection>
	</scm>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<source>${java.source.version}</source>
					<target>${java.target.version}</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.7.2</version>
			</plugin>
		</plugins>
	</build>

</project>
